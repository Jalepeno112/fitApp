<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="fitApp.TimerPage">
	<StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
		<Label x:Name="timeLabel" Text="{Binding datetime, Mode=TwoWay, StringFormat='{0:HH:mm:ss:f}'}" FontSize = "48"/>
		<StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="Start">
			<Button x:Name="stopButton" Text="stop" BackgroundColor="Red" Margin="10,5,10,5" HeightRequest="50" WidthRequest="100" TextColor="White"/>				
			<Button x:Name="startButton" Text="start" BackgroundColor="Lime" Margin="10,5,10,5" HeightRequest="50" WidthRequest="100" TextColor="White"/>
		</StackLayout>
		<Button x:Name="resetButton" Text="reset" BackgroundColor="Blue" Margin="10,5,10,5" HeightRequest="50" WidthRequest="100" TextColor="White" VerticalOptions="Start"/>
	</StackLayout>
</ContentPage>
